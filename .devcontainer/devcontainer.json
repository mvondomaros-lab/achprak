{
  "name": "achprak (pixi)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "lts" }
  },
  "postCreateCommand": "bash .devcontainer/setup-pixi.sh",
  "postStartCommand": "bash -lc '~/start-jupyter.sh >/tmp/jupyter.log 2>&1 &'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "jupyter.interactiveWindowMode": "perFile"
      }
    }
  },
  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": { "label": "Jupyter Lab", "onAutoForward": "openBrowser" }
  },
  "remoteUser": "vscode"
}

